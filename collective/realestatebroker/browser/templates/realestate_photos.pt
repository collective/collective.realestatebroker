<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.realestatebroker">

  <body>

    <div metal:fill-slot="main">

      <div tal:replace="structure provider:plone.abovecontenttitle" />

      <div>
        <address>
          <h1 class="documentFirstHeading">
            <metal:field use-macro="python:context.widget('title',
                                    mode='view')"> Variable goes here </metal:field>
          </h1>
          <span tal:replace="context/zipcode" />, <span tal:replace="context/city" />
        </address>
        <div class="price">
          <span tal:replace="view/CookedPrice" />
        </div>
      </div>

      <div tal:replace="structure provider:plone.belowcontenttitle" />
      <div tal:replace="structure provider:plone.abovecontentbody" />
      <div tal:replace="structure provider:realestatebroker.tabs" />

      <metal:field use-macro="python:context.widget('text', mode='view')">
        Body text
      </metal:field>

      <div class="reb-photos"
           tal:define="batch view/photo_batch">
        <img tal:replace="structure batch/selected_tag"/><br />

        <div tal:condition="batch/fastreverse">
          <a href=""
             tal:attributes="href batch/fastreverse">RR</a>
        </div>
        <div tal:condition="batch/reverse">
          <a href=""
             tal:attributes="href batch/reverse">R</a>
        </div>

        <ul>
          <li tal:repeat="photo python:batch['items']">
            <a href=""
               tal:attributes="href photo/url">
              <img tal:replace="structure photo/tag" />
            </a>
            <span tal:condition="photo/selected"> * </span>
          </li>
        </ul>

        <div tal:condition="batch/forward">
          <a href=""
             tal:attributes="href batch/forward">F</a>
        </div>
        <div tal:condition="batch/fastforward">
          <a href=""
             tal:attributes="href batch/fastforward">FF</a>
        </div>

      </div>

      <div tal:replace="structure provider:plone.belowcontentbody" />

    </div>
  </body>
</html>