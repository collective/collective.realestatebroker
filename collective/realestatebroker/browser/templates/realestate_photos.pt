<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.realestatebroker">

  <body>

    <div metal:fill-slot="main">

      <div tal:replace="structure provider:plone.abovecontenttitle" />

      <div>
        <address>
          <h1 class="documentFirstHeading">
            <metal:field use-macro="python:context.widget('title',
                                    mode='view')"> Variable goes here </metal:field>
          </h1>
          <span tal:replace="context/zipcode" />, <span tal:replace="context/city" />
        </address>
        <div class="price">
          <span tal:replace="view/CookedPrice" />
        </div>
      </div>

      <div tal:replace="structure provider:plone.belowcontenttitle" />
      <div tal:replace="structure provider:plone.abovecontentbody" />
      <ul class="formTabs">
        <li tal:replace="structure provider:realestatebroker.tabs" />
      </ul>

      <metal:field use-macro="python:context.widget('text', mode='view')">
        Body text
      </metal:field>

      <div class="reb-photo-show"
           tal:define="batch view/photo_batch">
        <div class="reb-selected-photo">
          <img tal:replace="structure batch/selected_tag" />
        </div>
        <ul class="reb-photo-controls">
          <li tal:condition="batch/fastreverse">
            <a href=""
               tal:attributes="href batch/fastreverse">
              <img src="++resource++collective.realestatebroker.images/media-seek-backward.png"
                   alt="reverse"
                   width="22"
                   height="22" />
            </a>
          </li>
          <li tal:repeat="photo python:batch['items']"
              >
            <a href=""
               class=""
               tal:attributes="href photo/url;
                               class python:photo['selected'] and 'reb-selected' or '';">
              <img tal:replace="structure photo/tag" />
            </a>
          </li>
          <li tal:condition="batch/fastforward">
            <a href=""
               tal:attributes="href batch/fastforward">
              <img src="++resource++collective.realestatebroker.images/media-seek-forward.png"
                   alt="reverse"
                   width="22"
                   height="22" />
            </a>
          </li>
        </ul>
      </div>

      <div tal:replace="structure provider:plone.belowcontentbody" />

    </div>
  </body>
</html>