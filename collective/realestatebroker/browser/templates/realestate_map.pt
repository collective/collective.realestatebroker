<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.realestatebroker">

  <body>

    <div metal:fill-slot="main">

      <div tal:replace="structure provider:plone.abovecontenttitle" />
      <div tal:replace="structure provider:realestatebroker.titlemanager" />
      <div tal:replace="structure provider:plone.belowcontenttitle" />
      <div tal:replace="structure provider:plone.abovecontentbody" />
      <ul class="formTabs">
        <li tal:replace="structure provider:realestatebroker.tabs" />
      </ul>

      <metal:field use-macro="python:context.widget('text', mode='view')">
        Body text
      </metal:field>


      <div class="googleMapView googleMapLocation">
        <dl>

          <dt class="title">

            <img src="++resources++residential-icon.gif"
                 alt="Residential"
                 width="20"
                 height="34"
                 class="marker" />
            <a href=""
               tal:attributes="href context/absolute_url" />
          </dt>

          <metal:field use-macro="python:context.widget('geolocation',
                                  mode='view')"> Variable goes here </metal:field>

        </dl>
      </div>

      <div tal:replace="structure provider:plone.belowcontentbody" />

    </div>
  </body>
</html>