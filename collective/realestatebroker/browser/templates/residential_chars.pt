<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.realestatebroker">

  <body>

    <div metal:fill-slot="main">

      <div tal:replace="structure provider:plone.abovecontenttitle" />
      <div tal:replace="structure provider:realestatebroker.titlemanager" />
      <div tal:replace="structure provider:plone.belowcontenttitle" />
      <div tal:replace="structure provider:plone.abovecontentbody" />

      <ul id="rebTabs"
          class="formTabs">
        <li tal:replace="structure provider:realestatebroker.tabs" />
      </ul>

      <tal:schemata tal:repeat="current_schemata
                                python:['measurements', 'details', 'environment', 'financial']">
        <h2 tal:content="current_schemata"/>
        <div tal:define="field_macro field_macro | here/widgets/field/macros/view"
             tal:repeat="field python:here.Schema().filterFields(schemata=current_schemata)">
          <tal:if_visible define="mode string:view;
                                  visState python:field.widget.isVisible(here, mode);
                                  visCondition python:field.widget.testCondition(context.aq_inner.aq_parent, portal, context);"
                          condition="python:visState == 'visible' and visCondition">
            <metal:use_field use-macro="field_macro" />
          </tal:if_visible>
        </div>
      </tal:schemata>

      <div tal:replace="structure provider:plone.belowcontentbody" />

    </div>
  </body>
</html>