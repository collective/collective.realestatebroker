<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.realestatebroker">
  <body>
    <div metal:fill-slot="main">

      <h1 i18n:translate="heading_manage_photos">
        Photo and floor management
      </h1>

      <h2 i18n:translate="heading_main_photo">
        Main photo
      </h2>
      <div>
        <img tal:replace="structure view/image_tag" />
      </div>

      <tal:floors tal:repeat="floor view/floor_info">
        <h2 tal:content="floor/title">
          Floor title
        </h2>
        <p tal:content="floor/description">
          Floor description
        </p>
        <ul>
          <li tal:repeat="photo floor/photos">
            <img tal:replace="structure photo/tag_thumb"/>
          </li>
        </ul>
      </tal:floors>

      <tal:floors tal:repeat="floor view/floor_plans">
        <!-- Btw, there's always only one. -->
        <h2 i18n:translate="heading_floor_plans">
          Floor plans
        </h2>
        <ul>
          <li tal:repeat="photo floor/photos">
            <img tal:replace="structure photo/tag_thumb"/>
          </li>
        </ul>
      </tal:floors>


    </div>
  </body>
</html>