<div class="realestate-header">
  <div class="reb-thumb"
    tal:condition="view/image_tag">
    <img tal:replace="structure view/image_tag" />
  </div>
  
  <div id="rebAddress">
    <h1>
      <metal:field use-macro="python:context.widget('title',
                              mode='view')">
        Title goes here.
      </metal:field>
    </h1>
    <span tal:replace="view/zipcode" />, <span tal:replace="view/city" />
    
    <div class="price">
      <span tal:replace="view/price" />&nbsp;
         <span tal:replace="view/after_price" />
    </div>
  </div>
</div>