<div class="realestate-header">
  <div class="reb-thumb"
       tal:define="image view/image"
       tal:condition="image">
    <a href="#" tal:attributes="href string:${context/absolute_url}/photos;
                                title image/title">
      <img tal:replace="structure image/tag" />
    </a>
  </div>

  <div id="rebAddress">
    <h1>
      <metal:field use-macro="python:context.widget('title',
                              mode='view')">
        Title goes here.
      </metal:field>
    </h1>
    <table>
      <tr>
        <td>
          <metal:field use-macro="python:context.widget('zipCode',
                                  mode='view')">
            zipcode goes here.
          </metal:field>
        </td>
        <td>
          <metal:field use-macro="python:context.widget('city',
                                  mode='view')">
            city goes here.
          </metal:field>
        </td>
      </tr>
    </table>

    <div class="price">
      <metal:field use-macro="python:context.widget('price',
                              mode='view')">
        price goes here.
      </metal:field>
    </div>
  </div>
</div>