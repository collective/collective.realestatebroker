<div class="realestate-header">
  <div class="reb-thumb"
       tal:condition="view/image_tag">
    <img tal:replace="structure view/image_tag" />
  </div>

  <div id="rebAddress">
    <h1>
      <metal:field use-macro="python:context.widget('title',
                              mode='view')">
        Title goes here.
      </metal:field>
    </h1>
    <table>
      <tr>
        <td>
          <metal:field use-macro="python:context.widget('zipCode',
                                  mode='view')">
            zipcode goes here.
          </metal:field>
        </td>
        <td>
          <metal:field use-macro="python:context.widget('city',
                                  mode='view')">
            zipcode goes here.
          </metal:field>
        </td>
      </tr>
    </table>

    <div class="price">
      <metal:field use-macro="python:context.widget('price',
                              mode='view')">
        price goes here.
      </metal:field>
    </div>
  </div>
</div>